doctype html
html(lang='vi')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title CUSTOMER
    link(rel='stylesheet' href='./assets/css/base.css')
    link(rel='stylesheet' href='./assets/css/main.css')
    link(rel='stylesheet' href='./assets/css/grid.css')
    link(rel='stylesheet' href='./assets/css/customer.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link#bootstrap-css(href='./assets/css/tet.css' rel='stylesheet')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
  script 
    - var isEmpty = parseInt(isEmpty)
    - console.log(isEmpty)
    - var Totals = 0;
  body
    .app
      header.header
        .grid.wide
          nav.header__navbar.hide-on-mobile-tablet
            ul.header__navbar-list(style='width:1200px')
              // Header with Search
              .header-with-search
                label.header__mobile-search(for='mobile-search-checkbox')
                  i.header__mobile-search-icon.fas.fa-search
                // Header Logo
                .header__logo.hide-on-tablet
                  img.header__logo-img(src='./assets/img/logo.png' alt='')
                  a.header__logo-link(href='/')
                input#mobile-search-checkbox.header__search-checkbox(type='checkbox' hidden='')
                // Header Search
                form#form-search(action='' method='POST')
                  .header__search(style='width: 700px;')
                    .header__search-input-wrap
                      input.header__search-input(type='text' placeholder='Nhập để tìm kiếm ')
                    button.header__search-btn(type='submit')
                      i.header__search-btn-icon.fas.fa-search
                // Header Logo
                .header__location.hide-on-tablet
                  img.header__location-img(src='./assets/img/location.png' alt='')
                  a.header__location-link(href='/')
                // User
                .header__user
                  img.header__navbar-user-img(src='./assets/img/user_avatar.png' alt='')
                  ul.header__navbar-user-menu
                    li.header__navbar-user-item
                      a(href='') Tài khoản của tôi
                    li.header__navbar-user-item.header__navbar-user-item--separate
                      a(href='') Đăng xuất
      .app__container
        .grid.wide
          .row.sm-gutter.app__content
            .cart
              if isEmpty == 1
                h1(style='margin: 10rem; text-align: center;position:relative;left:500px;top:25px') Your cart is empty
              else
                .row
                    .col-xs-8
                        .panel.panel-info(style ="position:relative;left:350px;top:2px")
                            .panel-body
                                  each food in carts
                                    - Totals = Totals + food.price * food.qty
                                    .row
                                        .col-xs-2
                                          .image
                                              img.img-prd(src=food.image alt='mi' style="width: 150px;height: 100px;")
                                        .col-xs-4
                                            h4.product-name(style ="position:relative;left:140px;top:25px")
                                                strong !{food.name}
                                        .col-xs-6
                                            .col-xs-6.text-right
                                            h6(style ="position:relative;left:200px;top:45px")
                                                strong 
                                                    | !{food.price} 
                                                    span.text-muted x     
                                        .col-xs-4
                                            h4.product-name(style ="position:relative;left:400px;top:-57px")
                                              |!{food.qty}
                                        .col-xs-2
                                          a(href = '/cart/update/'+ food.id.toString()+'/?action=add')
                                            button(style ="position:relative;left:370px;top:-57px") +
                                        .col-xs-2
                                          a(href = '/cart/update/'+ food.id.toString()+'/?action=remove')
                                            button(style ="position:relative;left:370px;top:-57px") -
                                        .col-xs-2
                                          a(href='/cart/update/'+ food.id.toString()+'/?action=clear')
                                            button.btn.btn-link.btn-xs(style ="position:relative;left:450px;top:-57px")
                                                span.fa.fa-trash  
                                    hr
                                  .row
                                      .text-center
                                          .col-xs-9
                                              h6.text-right(style ="position:relative;left:500px;top:-3px") Added items?
                                          .col-xs-3
                                              a(href = '/index')
                                                button.btn.btn-success.btn-block(role = 'button',style = "position:absolute;left:515px;top:-5px") Update cart
                                  .panel-footer
                                      .row.text-center
                                          .col-xs-9
                                              h4.text-right 
                                                  | Total 
                                                  strong #{Totals} VND
                                          .col-xs-3
                                              a(href = '/payment')
                                                button.btn.btn-success.btn-block(type='button',style ="position:absolute;left:372px;top:-5px" ) Checkout
      
                
            // Category
            .toolbar
              nav.category
                ul.category-list
                  li.category-item
                    button.category-item__link(type='button' onclick='dieu_huong()') Trang chủ
                    script.
                      function dieu_huong(){
                      location.assign("index");
                      }
                    // <button class="category-item__link">Trang chủ</button>
                  li.category-item
                    button.category-item__link(type='button' onclick='dieu_huong1()') Thực đơn
                    script.
